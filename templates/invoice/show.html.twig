{% extends 'base.html.twig' %}

{% block title %}Invoice{% endblock %}

{% block body %}
    <h1>Invoice</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>InvoiceNumber</th>
                <td>{{ invoice.invoiceNumber }}</td>
            </tr>
            <tr>
                <th>InvoiceDate</th>
                <td>{{ invoice.invoiceDate ? invoice.invoiceDate|date('Y-m-d H:i:s T') : '' }}</td>
            </tr>
            <tr>
                <th>KmCounter</th>
                <td>{{ invoice.kmCounter }}</td>
            </tr>
            <tr>
                <th>PtAmount</th>
                <td>{{ invoice.ptAmount }}</td>
            </tr>
            <tr>
                <th>AmmountToPay</th>
                <td>{{ invoice.ammountToPay }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_invoice_index') }}">back to list</a>

    <a href="{{ path('app_invoice_edit', {'invoiceNumber': invoice.invoiceNumber}) }}">edit</a>

    {{ include('invoice/_delete_form.html.twig') }}
{% endblock %}
