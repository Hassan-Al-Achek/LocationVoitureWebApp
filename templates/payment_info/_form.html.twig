<div class="container">
	<h2 class="form-title">Create new PaymentInfo</h2>

	{{ form_start(form) }}
	<div class="form-element">
		{{ form_widget(form.licensePlate) }}
		{{ form_label(form.licensePlate) }}
	</div>

	<div class="form-element">
		{{ form_widget(form.model) }}
		{{ form_label(form.model) }}
	</div>

	<div class="form-element">
		{{ form_widget(form.KM) }}
		{{ form_label(form.KM) }}
	</div>

	<div class="form-element">
		{{ form_widget(form.amountPerHour) }}
		{{ form_label(form.amountPerHour) }}
	</div>

	<div class="form-element">
		{{ form_widget(form.reduction) }}
		{{ form_label(form.reduction) }}
	</div>

	<div class="buttons-box">
		<div class="button-one">
			<button>
				{{ button_label|default('Save') }}
			</button>
		</div>
		<div class="button-two">
			<a href="{{ path('app_payment_info_index') }}">back to list</a>
		</div>
	</div>
	{{ form_end(form) }}
</div>
