{% extends 'base.html.twig' %}

{% block title %}Car{% endblock %}

{% block body %}
    <h1>Car</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>LicensePlate</th>
                <td>{{ car.licensePlate }}</td>
            </tr>
            <tr>
                <th>Mark</th>
                <td>{{ car.mark }}</td>
            </tr>
            <tr>
                <th>Model</th>
                <td>{{ car.model }}</td>
            </tr>
            <tr>
                <th>NumberOfSeats</th>
                <td>{{ car.numberOfSeats }}</td>
            </tr>
            <tr>
                <th>Fuel</th>
                <td>{{ car.fuel }}</td>
            </tr>
            <tr>
                <th>ImagePath</th>
                <td>{{ car.imagePath }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_car_index') }}">back to list</a>

    <a href="{{ path('app_car_edit', {'licensePlate': car.licensePlate}) }}">edit</a>

    {{ include('car/_delete_form.html.twig') }}
{% endblock %}
