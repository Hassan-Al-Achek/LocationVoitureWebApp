{% extends 'base.html.twig' %}

{% block title %}Cars Gallery
{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{asset('home.css')}}">
	<link rel="stylesheet" href="{{asset('car.css')}}">
{% endblock %}

{% block content %}
	<div class="car-info-container">
		<div class="car-image"><img src="{{ asset(car.imagePath) }}" alt=""></div>
		<div class="info-container">
			<div class="info-elem">Car Mark:
				{{car.mark}}</div>
			<div class="info-elem">Car Model:
				{{car.model}}</div>
			<div class="info-elem">Number Of Seats:
				{{car.numberOfSeats}}</div>
			<div class="info-elem">License Plate:
				{{car.licensePlate}}</div>
			<div class="info-elem">Fuel:
				{{car.fuel}}</div>
			<div class="info-elem">Payment:
				{{paymentInfo.amountPerHour}}
				$ per hour</div>
			<div class="info-elem">Parking Number:
				{{car.parkingNumber}}</div>
			<div class="info-elem">Parking Street:
				{{parking.street}}</div>
			<div class="info-elem">Parking City:
				{{parking.city}}</div>
		</div>
	</div>
	<div>
		{% if car.clientNumber == null %}
			<div class="rent-button">
				<a href="/rent/{{car.licensePlate}}">
					<i class="fa-solid fa-circle-plus"></i>Rent
				</a>
			</div>
		{% else %}
			<div class="rent-button-not">
				<a href="#">
					<i class="fa-solid fa-circle-plus"></i>Not Available
				</a>

			</div>
		{% endif %}
	</div>
{% endblock %}
