{% extends 'base.html.twig' %}

{% block title %}Parking index
{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href={{asset("forms-parking.css")}}>
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="container-elem">Parking index</h1>
		<div class="container-elem">Id</div>
		<div class="container-elem">Capacity</div>
		<div class="container-elem">Street</div>
		<div class="container-elem">City</div>
		<div class="container-elem">actions</div>

		{% for parking in parkings %}
			<div class="container-elem">{{ parking.id }}</div>
			<div class="container-elem">{{ parking.Capacity }}</div>
			<div class="container-elem">{{ parking.street }}</div>
			<div class="container-elem">{{ parking.city }}</div>
			<div class="container-elem">
				<a href="{{ path('app_parking_show', {'id': parking.id}) }}" class="container-elem">show</a>
				<a href="{{ path('app_parking_edit', {'id': parking.id}) }}" class="container-elem">edit</a>
			</div>
		{% else %}
			<div class="container-elem">no records found</div>
		{% endfor %}
		<div class="container-elem">
			<a href="{{ path('app_parking_new') }}" class="container-elem">Create new</a>
		</div>
	</div>
{% endblock %}
